<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/send_channel_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/message_box_channel_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="message"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/send_channel_admin"/>

    <ListView
        android:id="@+id/message_list_channel_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/message_box_channel_admin"
        android:dividerHeight="0dp"
        android:divider="@null"/>

</RelativeLayout>